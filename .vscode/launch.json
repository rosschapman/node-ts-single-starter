{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debugger",
      "program": "${file}",
      
      "runtimeExecutable": "nodemon",
      "sourceMaps": true,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
